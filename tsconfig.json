{
  "include": ["src"],
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "noEmitOnError": false,
    "target": "ES2021",
    "module": "ES2020",
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  }
}
